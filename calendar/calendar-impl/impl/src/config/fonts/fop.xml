<?xml version="1.0"?>
<!-- FOP configuration with system font directories for better CJK support -->
<fop version="2.0">
  <strict-validation>false</strict-validation>

  <!-- Information for specific renderers -->
  <renderers>
    <renderer mime="application/pdf">
      <filterList>
        <!-- provides compression using zlib flate (default is on) -->
        <value>flate</value>
      </filterList>

      <fonts>
        <!-- Windows system fonts -->
        <directory recursive="true">C:\Windows\Fonts</directory>
        <!-- macOS system fonts -->
        <directory recursive="true">/Library/Fonts</directory>
        <directory recursive="true">/System/Library/Fonts</directory>
        <!-- Ubuntu (and most Linux) fonts -->
        <directory recursive="true">/usr/share/fonts</directory>
        <directory recursive="true">/usr/local/share/fonts</directory>
        <!-- convenience: scans the above plus other standard OS dirs -->
        <auto-detect/>
      </fonts>
    </renderer>
  </renderers>
</fop>