<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Load DB settings for tests -->
    <bean id="testPropertiesConfigurer"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:/hibernate.properties</value>
            </list>
        </property>
    </bean>

    <!-- In-memory datasource for tests -->
    <bean id="testDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${hibernate.connection.driver_class}"/>
        <property name="url" value="${hibernate.connection.url}"/>
        <property name="username" value="${hibernate.connection.username}"/>
        <property name="password" value="${hibernate.connection.password}"/>
    </bean>

    <!-- SessionFactory used in tests (mirrors Sakai 'GlobalSessionFactory') -->
    <bean id="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory"
          class="org.springframework.orm.hibernate5.LocalSessionFactoryBean">
        <property name="dataSource" ref="testDataSource"/>
        <property name="mappingResources">
            <list>
                <value>org/sakaiproject/signup/hbm/SignupMeeting.hbm.xml</value>
                <value>org/sakaiproject/signup/hbm/SignupSite.hbm.xml</value>
                <value>org/sakaiproject/signup/hbm/SignupTimeslot.hbm.xml</value>
            </list>
        </property>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">${hibernate.dialect}</prop>
                <prop key="hibernate.show_sql">${hibernate.show_sql}</prop>
                <prop key="hibernate.cache.use_second_level_cache">${hibernate.cache.use_second_level_cache}</prop>
                <prop key="hibernate.query.substitutions">true 1, false 0</prop>
                <prop key="hibernate.hbm2ddl.auto">${hibernate.hbm2ddl.auto}</prop>
            </props>
        </property>
    </bean>

    <!-- Transaction manager for tests (mirrors Sakai 'GlobalTransactionManager') -->
    <bean id="org.sakaiproject.springframework.orm.hibernate.GlobalTransactionManager"
          class="org.springframework.orm.hibernate5.HibernateTransactionManager">
        <property name="sessionFactory"
                  ref="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory"/>
    </bean>

    <!-- Wire the DAO under test -->
    <bean id="org.sakaiproject.signup.dao.SignupMeetingDao"
          class="org.sakaiproject.signup.dao.SignupMeetingDaoImpl">
        <property name="sessionFactory"
                  ref="org.sakaiproject.springframework.orm.hibernate.GlobalSessionFactory"/>
    </bean>

</beans>

